                        },
                        new { @class = "group-item-link" }
                    )
                </li>
                <li class="group-item">
                    @Ajax.ActionLink("收货地址", "MyAdressPatrial", "",
                        new AjaxOptions
                        {
                            UpdateTargetId = "order-list-main-wrap",
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "GET",
                            LoadingElementId = "loading-ele"
                        },
                        new { @class = "group-item-link" }
                    )
                </li>
            </ul>
        </div>
    </div>

    <!--内容容器-->
    <div id="order-list-main-wrap" class="order-list-main-wrap">
        <div id="loading-ele" class="loading-ele">
            加载中，请稍候...
        </div>
    </div>

</div>