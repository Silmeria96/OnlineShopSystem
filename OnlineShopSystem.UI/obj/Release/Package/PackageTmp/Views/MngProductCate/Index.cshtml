@{
    Layout = null;
}

<h3>商品分类管理</h3>

<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>

<table id="data-table" lay-filter="test"></table>

<script type="text/html" id="row-opt-menu">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>


<script>
    layui.use('table', function () {
        var table = layui.table;

        table.render({
            elem: '#data-table',
            height: '400',
            url: '/api/MngProductCateApi/GetAll/',
            page: true,
            toolbar: 'default',
            cols: [[
                { type: 'checkbox', fixed: 'left' },
                { field: 'CateID', title: 'ID', width: 100, sort: true, fixed: 'left' },
                { field: 'OrderID', title: '序号', width: 100, sort: true },
                { field: 'PID', title: '父级ID', width: 100, sort: true },
                { field: 'CateName', title: '分类名称', width: 100, sort: true },
                { field: 'CreateTime', title: '创建日期', width: 150, sort: true },
                { field: 'UpdateTime', title: '更新日期', width: 100, sort: true },
                { field: 'IsUsed', title: '是否启用', width: 100, sort: true },
                { toolbar: '#row-opt-menu', width: 165, align: 'center', fixed: 'right' }
            ]]
        });

    });
</script>
