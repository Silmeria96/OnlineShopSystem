@{
    Layout = null;
}

<h3>客户信息管理</h3>

<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>

<table id="data-table" lay-filter="test"></table>

<script type="text/html" id="row-opt-menu">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>


<script>
    layui.use(['table', 'util'], function () {
        var table = layui.table,
            util = layui.util;

        table.render({
            elem: '#data-table',
            height: 312,
            url: '/api/MngCustomerApi/GetAll/',
            page: true,
            toolbar: 'default',
            cols: [[
                { type: 'checkbox', fixed: 'left' },
                { field: 'UserID', title: 'ID', width: 100, sort: true, fixed: 'left' },
                { field: 'IsOnline', title: '是否在线', width: 100, sort: true },
                { field: 'Account', title: '帐号', width: 100, sort: true },
                { field: 'Password', title: '密码', width: 100, sort: true },
                { field: 'DisplayName', title: '昵称', width: 100, sort: true },
                { field: 'CreateTime', title: '创建时间', width: 100, sort: true },
                { field: 'UpdateTime', title: '更新时间', width: 100, sort: true },
                { toolbar: '#row-opt-menu', width: 165, align: 'center', fixed: 'right' }
            ]]
        });

    });
</script>