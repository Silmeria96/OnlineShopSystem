@using OnlineShopSystem.UI.Util

@{
    string websiteName = CommonFunc.GetConfig("WebsiteName");
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>在线商城网站后台管理系统</title>
    <link href="~/Plugins/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Plugins/layui/layui.js"></script>
    @Styles.Render("~/Content/Shared/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="layui-layout-body">

    
    <div class="layui-layout layui-layout-admin">

        <!--顶部导航-->
        <div class="layui-header">
            <div class="layui-logo">后台管理系统</div>
            <ul class="layui-nav layui-layout-left">
                <li class="layui-nav-item"><a href="">数据管理</a></li>
                <li class="layui-nav-item"><a href="">系统设置</a></li>
                <li class="layui-nav-item">
                    <a href="javascript:;">其它功能</a>
                    <dl class="layui-nav-child">
                        <dd><a href="">邮件管理</a></dd>
                        <dd><a href="">消息管理</a></dd>
                        <dd><a href="">授权管理</a></dd>
                    </dl>
                </li>
            </ul>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="~/Images/Home/headshot.jpg" class="layui-nav-img">
                        Silmeria
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="">基本资料</a></dd>
                        <dd><a href="">安全设置</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item"><a href="">注销</a></li>
            </ul>
        </div>


        <!--左侧导航-->
        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <ul class="layui-nav layui-nav-tree" lay-filter="test">
                    <li class="layui-nav-item">
                        <a class="" href="javascript:;">用户管理</a>
                        <dl class="layui-nav-child">
                            <dd>@Html.ActionLink("基础客户","Index", "MngCustomer")</dd>
                            <dd><a href="javascript:;">网站管理员</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;">商品管理</a>
                        <dl class="layui-nav-child">
                            <dd>@Html.ActionLink("商品分类", "Index", "MngBaseCategory")</dd>
                            <dd>@Html.ActionLink("基础商品", "Index", "MngBaseProduct")</dd>
                            <dd><a href="javascript:;">商品属性</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item"><a href="javascript:;">订单管理</a></li>
                    <li class="layui-nav-item"><a href="javascript:;">店铺管理</a></li>
                    <li class="layui-nav-item"><a href="javascript:;">新闻管理</a></li>
                </ul>
            </div>
        </div>


        <!--主体-->
        <div class="layui-body">
            <div style="padding: 15px;">
                @RenderBody()
            </div>
        </div>


        <!--页脚-->
        <div class="layui-footer">
            © layui.com - @websiteName
        </div>
    </div>


    <script>
        layui.use('element', function () {
            var element = layui.element;

        });
    </script>
</body>

</html>
