@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Shared/search-partial.css" rel="stylesheet" />
<link href="~/Content/Search/search.css" rel="stylesheet" />

@Html.Partial("_SearchPartial")

<!--页面容器-->
<div class="search-result-wrapper">

    <!--面包屑导航-->
    <div class="crumbs-bar">
        <a href="#">全部结果</a>
        <span> > </span>
        <a href="#">面部护肤</a>
    </div>

    <!--搜索结果-->
    <div class="search-result-box">

        <!--商品分类过滤器-->
        <div class="search-cate-selector">

        </div>

        <!--搜索结果容器-->
        <div class="search-result-main">

            <!--左侧推荐模块-->
            <div class="aside-box">
                <div class="aside-header">
                    <h3>商品精选</h3>
                </div>
                <div class="aside-list">
                    <ul>
                        <li>
                            <div class="list-item-img">
                                <a href="#">
                                    <img src="~/Images/Search/goods1.jpg" alt="Alternate Text" />
                                </a>
                            </div>
                            <div class="list-item-price">
                                <strong>
                                    <em>￥</em>
                                    <i>849.00</i>
                                </strong>
                            </div>
                            <div class="list-item-name">
                                <a href="#">欧莱雅(LOREAL)金致臻颜化妆品护肤套装(洁面+活肤水+乳液+眼霜；赠品精华液+精华水+眼霜*2(赠品随机发)）</a>
                            </div>
                            <div class="list-item-commit">
                                已有<span class="commit-count">35000+</span>人评价
                            </div>
                        </li>
                        <li>
                            <div class="list-item-img">
                                <a href="#">
                                    <img src="~/Images/Search/goods1.jpg" alt="Alternate Text" />
                                </a>
                            </div>
                            <div class="list-item-price">
                                <strong>
                                    <em>￥</em>
                                    <i>849.00</i>
                                </strong>
                            </div>
                            <div class="list-item-name">
                                <a href="#">欧莱雅(LOREAL)金致臻颜化妆品护肤套装(洁面+活肤水+乳液+眼霜；赠品精华液+精华水+眼霜*2(赠品随机发)）</a>
                            </div>
                            <div class="list-item-commit">
                                已有<span class="commit-count">35000+</span>人评价
                            </div>
                        </li>
                        <li>
                            <div class="list-item-img">
                                <a href="#">
                                    <img src="~/Images/Search/goods1.jpg" alt="Alternate Text" />
                                </a>
                            </div>
                            <div class="list-item-price">
                                <strong>
                                    <em>￥</em>
                                    <i>849.00</i>
                                </strong>
                            </div>
                            <div class="list-item-name">
                                <a href="#">欧莱雅(LOREAL)金致臻颜化妆品护肤套装(洁面+活肤水+乳液+眼霜；赠品精华液+精华水+眼霜*2(赠品随机发)）</a>
                            </div>
                            <div class="list-item-commit">
                                已有<span class="commit-count">35000+</span>人评价
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <!--右侧内容模块-->
            <div class="result-box">

                <!--排序过滤器-->
                <div class="result-filter">
                    <div class="filter-floor">
                        <div class="sort-box">
                            <a class="sort-item active" href="#">
                                <span>综合</span>
                                <i class="iconfont icon-location"></i>
                            </a>
                            <a class="sort-item" href="#">
                                <span>销量</span>
                                <i class="iconfont icon-location"></i>
                            </a>
                            <a class="sort-item" href="#">
                                <span>评论数</span>
                                <i class="iconfont icon-location"></i>
                            </a>
                            <a class="sort-item" href="#">
                                <span>新品</span>
                                <i class="iconfont icon-location"></i>
                            </a>
                            <a class="sort-item" href="#">
                                <span>价格</span>
                                <i class="iconfont icon-location"></i>
                            </a>
                        </div>
                        <div class="price-wrapper">
                            <div class="price-box min">
                                <input type="number" name="name" value="" />
                            </div>
                            <em>-</em>
                            <div class="price-box max">
                                <input type="number" name="name" value="" />
                            </div>
                        </div>
                    </div>
                </div>

                <!--搜索结果列表-->
                <div class="result-list">
                    <ul class="list-wrapper">
                        @{
                            if (ViewBag.SearchResult != null)
                            {
                                foreach (var item in ViewBag.SearchResult)
                                {
                                    <li class="list-item">
                                        <div class="list-item-wrapper">
                                            <div class="list-item-img">
                                                <a href="/Search/Detail?id=1">
                                                    <img src="@item.ThumbImgUrl" alt="Alternate Text" />
                                                </a>
                                            </div>
                                            <div class="list-item-price">
                                                <strong>
                                                    <span>￥</span>
                                                    <i>@item.Price</i>
                                                </strong>
                                            </div>
                                            <div class="list-item-name">
                                                <a href="#">@item.Name</a>
                                            </div>
                                            <div class="list-item-commit">
                                                <span><a href="#">3.6万+</a>条评价</span>
                                            </div>
                                            <div class="list-item-shop">
                                                <a href="#">欧莱雅京东自营官方旗舰店</a>
                                                <a href="#"><i class="iconfont icon-location"></i></a>
                                            </div>
                                            <div class="list-item-icons">
                                                <div class="list-item-icon">自营</div>
                                            </div>
                                            <div class="list-item-actions">
                                                <a class="list-item-action-btn" href="#">
                                                    <i class="iconfont icon-location"></i>对比
                                                </a>
                                                <a class="list-item-action-btn addFocus" href="#">
                                                    <i class="iconfont icon-location"></i>关注
                                                </a>
                                                <a class="list-item-action-btn addToCart" href="/ShopCart/AddToCart">
                                                    <i class="iconfont icon-location"></i>加入购物车
                                                </a>
                                            </div>
                                        </div>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>

            </div>

        </div>

    </div>

</div>


